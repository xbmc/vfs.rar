<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="vfs.rar"
  version="1.0.0"
  name="RAR archive support"
  provider-name="spiff">
  <requires>
    <import addon="xbmc.vfs" version="1.0.0"/>
  </requires>
  <extension
    point="xbmc.vfs"
    protocols="rar"
    extensions=".rar|.001"
    files="true"
    directories="true"
    filedirectories="true"
    library_linux="vfs.rar.so"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">RAR archive support</summary>
    <description lang="en">RAR archive support</description>
    <platform>all</platform>
  </extension>
</addon>
