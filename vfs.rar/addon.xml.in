<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="vfs.rar"
  version="2.0.0"
  name="RAR archive support"
  provider-name="spiff">
  <requires>@ADDON_DEPENDS@</requires>
  <extension
    point="kodi.vfs"
    protocols="rar"
    extensions=".rar|.001"
    files="true"
    directories="true"
    filedirectories="true"
    library_@PLATFORM@="@LIBRARY_FILENAME@" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">RAR archive support</summary>
    <description lang="en">RAR archive support</description>
    <platform>@PLATFORM@</platform>
  </extension>
</addon>
